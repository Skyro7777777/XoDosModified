
#!/data/data/com.xodos/files/usr/bin/sh
am broadcast --user 0 \
		 --es com.xodos.app.reload_style storage \
		 -a com.xodos.app.reload_style com.xodos > /dev/null

 sleep 2
    pkg remove xodos-display-nightly -y
pkg remove xodos-x11-nightly -y
dpkg -i /data/data/com.xodos/files/home/xodos-x11-nightly-1.03.10-0-all.deb  
dpkg -i /data/data/com.xodos/files/home/xkeyboard-config_2.45_all.deb

sleep 1
cp -f /data/data/com.xodos/files/fix /data/data/com.xodos/files/home
cp -f /data/data/com.xodos/files/fix /data/data/com.xodos/files/usr/bin


cp  /data/data/com.xodos/files/usr/bin/xodos /data/data/com.xodos/files/XoDos-desktop
cp /data/data/com.xodos/files/usr/bin/xodos6 /data/data/com.xodos/files/XoDos-soundfixed

chmod +x /data/data/com.xodos/files/usr/bin/xodos

chmod +x /data/data/com.xodos/files/usr/bin/xodxx

chmod +x /data/data/com.xodos/files/usr/bin/xodxx2
chmod +x /data/data/com.xodos/files/usr/bin/xodos
chmod +x  /data/data/com.xodos/files/usr/bin/xodos6
chmod +x /data/data/com.xodos/files/usr/bin/xodxd
chmod +x  /data/data/com.xodos/files/usr/etc/bash.bashrc
chmod +x  /data/data/com.xodos/files/home/x11
chmod +x /data/data/com.xodos/files/*
chmod +x  /data/data/com.xodos/files/XoDos-soundfixed
chmod +x /data/data/com.xodos/files/xodset-settings

chmod +x /data/data/com.xodos/files/usr/bin/kali
chmod +x /data/data/com.xodos/files/usr/bin/kaliu
chmod +x /data/data/com.xodos/files/usr/bin/switch
chmod +x /data/data/com.xodos/files/switch
chmod +x /data/data/com.xodos/files/usr/bin/chk
chmod +x /data/data/com.xodos/files/usr/bin/xmnu
chmod +x /data/data/com.xodos/files/usr/bin/installproot
chmod +x /data/data/com.xodos/files/usr/bin/installkali
chmod +x /data/data/com.xodos/files/usr/bin/fix
chmod +x /data/data/com.xodos/files/*
# sleep 0.2

ln -sf $(df -H | grep -o "/storage/....-....") "$HOME/Desktop/ext-sdcard" &>/dev/null
sleep 1
mv $PREFIX/share/X11/xkb $PREFIX/share/X11/xkb-backup 2>/dev/null

# Create new links
ln -s $PREFIX/share/xkeyboard-config-2 $PREFIX/share/X11/xkb
rm -f /data/data/com.xodos/files/xodos.tar.xz && rm -f /data/data/com.xodos/files/home/xodos.tar.xz 
sleep 2
killall -9 com.xodos
exit
