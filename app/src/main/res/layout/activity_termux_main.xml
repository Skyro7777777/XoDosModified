<com.xodos.app.terminal.DisplaySlidingWindow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xodos="http://schemas.android.com/apk/res/com.xodos"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_xodos_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingRight="50dp"
    android:overScrollMode="never"
    tools:ignore="ResAuto">

    <com.xodos.app.terminal.DisplayWindowLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <include layout="@layout/activity_xodos" />

        <include layout="@layout/display_window" />

        <include layout="@layout/window_preference" />
    </com.xodos.app.terminal.DisplayWindowLinearLayout>
</com.xodos.app.terminal.DisplaySlidingWindow>
